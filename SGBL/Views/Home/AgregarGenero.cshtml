@model SGBL.Models.ViewModelGeneros

@{
    ViewData["Title"] = "Agregar Nuevo Género";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarGenero" id="formAgregarGenero">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre del género</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del género" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>

        <div id="alertaExito" class="alert alert-success d-none" role="alert">
            ¡El género se agregó exitosamente!
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Muestra la alerta de éxito cuando se envía el formulario
            $('#formAgregarGenero').submit(function (event) {
                event.preventDefault(); // Evita el envío del formulario
                $('#alertaExito').removeClass('d-none'); // Muestra la alerta de éxito
                setTimeout(function () {
                    $('#formAgregarGenero').unbind('submit').submit(); // Envía el formulario después de 2 segundos
                }, 2000);
            });
        });
    </script>
}

<style>
    /* Estilos para el placeholder */
    input::placeholder {
        color: #6c757d; /* Color de texto del placeholder */
        font-style: italic; /* Texto en cursiva */
    }

    /* Estilos personalizados */
    .form-group {
        margin-bottom: 20px;
    }

    #alertaExito {
        margin-top: 10px;
    }
</style>
